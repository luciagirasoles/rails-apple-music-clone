<%= form_for [:admin, @album] do |f| %>
  <% if @album.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @album.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <p>
    <%= f.label :cover %><br />
    <%= f.file_field :cover %>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
